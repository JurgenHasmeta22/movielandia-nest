{
    "name": "movielandia-webapi",
    "private": true,
    "version": "1.0.0",
    "description": "Movielandia24 WebAPI repository",
    "license": "MIT",
    "scripts": {
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/jest/bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "format": "prettier --write src/**/*.{js,jsx,ts,tsx,css,md,json,scss,prisma} --config ./.prettierrc",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "build": "nest build",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "migrate:dev": "prisma migrate dev --preview-feature",
        "migrate:dev:create": "prisma migrate dev --create-only --preview-feature",
        "migrate:reset": "prisma migrate reset --preview-feature",
        "migrate:deploy": "npx prisma migrate deploy --preview-feature",
        "migrate:status": "npx prisma migrate status --preview-feature",
        "migrate:resolve": "npx prisma migrate resolve --preview-feature",
        "prisma:studio": "npx prisma studio",
        "prisma:generate": "npx prisma generate",
        "prisma:generate:watch": "npx prisma generate --watch",
        "prisma:seed": "ts-node prisma/seed/seed.ts"
    },
    "engines": {
        "npm": ">=10.0.0",
        "node": ">=20.0.0"
    },
    "dependencies": {
        "@nestjs/common": "^11.0.1",
        "@nestjs/config": "^4.0.2",
        "@nestjs/core": "^11.0.1",
        "@nestjs/jwt": "^11.0.0",
        "@nestjs/passport": "^11.0.5",
        "@nestjs/platform-express": "^11.0.17",
        "@nestjs/swagger": "^11.1.3",
        "@prisma/client": "^6.6.0",
        "@types/bcrypt": "^5.0.2",
        "bcrypt": "^5.1.1",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "dotenv": "^16.5.0",
        "ejs": "^3.1.10",
        "passport": "^0.7.0",
        "passport-jwt": "^4.0.1",
        "reflect-metadata": "^0.2.2",
        "resend": "^4.2.0",
        "rxjs": "^7.8.1"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.2.0",
        "@eslint/js": "^9.18.0",
        "@faker-js/faker": "^9.7.0",
        "@mermaid-js/mermaid-cli": "^11.4.2",
        "@nestjs/cli": "^11.0.0",
        "@nestjs/schematics": "^11.0.0",
        "@nestjs/testing": "^11.0.1",
        "@swc/cli": "^0.6.0",
        "@swc/core": "^1.10.8",
        "@types/express": "^5.0.0",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.10.7",
        "@types/passport-jwt": "^4.0.1",
        "@types/supertest": "^6.0.2",
        "eslint": "^9.18.0",
        "eslint-config-prettier": "^10.0.1",
        "eslint-plugin-prettier": "^5.2.3",
        "globals": "^15.14.0",
        "jest": "^29.7.0",
        "prettier": "^3.4.2",
        "prisma": "^6.6.0",
        "prisma-dbml-generator": "^0.12.0",
        "prisma-docs-generator": "^0.8.0",
        "prisma-erd-generator": "^2.0.4",
        "prisma-generator-fake-data": "^0.14.3",
        "prisma-json-schema-generator": "^5.1.5",
        "prisma-markdown": "^2.0.0",
        "puppeteer": "^23.11.1",
        "source-map-support": "^0.5.21",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.5",
        "ts-loader": "^9.5.2",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.7.3",
        "typescript-eslint": "^8.20.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    },
    "prisma": {
        "schema": "prisma/schema",
        "seed": "ts-node prisma/seed/seed.ts"
    }
}
